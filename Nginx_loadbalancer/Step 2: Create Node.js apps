app1/server.js:

const express = require('express');
const app = express();
const PORT = 3000;

app.get('/', (req, res) => {
    res.send('Hello from App 1!');
});

app.listen(PORT, () => {
    console.log(`App 1 running on port ${PORT}`);
});


app2/server.js:

const express = require('express');
const app = express();
const PORT = 3000;

app.get('/', (req, res) => {
    res.send('Hello from App 2!');
});

app.listen(PORT, () => {
    console.log(`App 2 running on port ${PORT}`);
});
